#!/bin/sh
sudo pacman -Syu --noconfirm || exit $?

echo
echo
echo -ne "\rpower off in 5 secs"
sleep 1
echo -ne "\rpower off in 4 secs"
sleep 1
echo -ne "\rpower off in 3 secs"
sleep 1
echo -ne "\rpower off in 2 secs"
sleep 1
echo -ne "\rpower off in 1 secs"
sleep 1
echo -e "\rpower off now      "

sudo halt -p || exit $?
