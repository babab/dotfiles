#!/usr/bin/php
<?php
# vim: set ft=php:

$file = "/tmp/dateps1_" . hash('md4', $argv[1] . $argv[2]);

$tty = str_replace('dev', '', $argv[2]);
$tty = str_replace('/', '', $tty);
$tty = str_replace('tty', 't', $tty);
$tty = str_replace('pts', 'p', $tty);

if (!file_exists($file)) {
    echo $tty . ':new';
    file_put_contents($file, time(), LOCK_EX);
    exit;
}
else {
    $last_time = (int) file_get_contents($file);
    $secs = time() - $last_time;
}

if ($secs < 60) {
    echo "$tty:$secs" . 's';
}
else if ($secs < (60 * 60)) {
    echo "$tty:" . floor($secs / 60) . 'm' . $secs % 60 . 's';
}
else {
    $h = floor($secs / (60 * 60));

    $mdiv = $secs % (60 * 60);
    $m = floor($mdiv / 60);

    $sdiv = $mdiv % 60;
    $s = ceil($sdiv);
    echo "$tty:" . $h.'h' . $m.'m' . $s.'s';
}

file_put_contents($file, time(), LOCK_EX);
?>
